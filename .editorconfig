# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,xml,css,scss,less,md,yml,yaml,json,toml,js,ts,rb,scala,sh}]
indent_size = 2

[*.{c,cpp,h,hpp,py,java,kt,swift,cgi,pl,php,rs,go}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
